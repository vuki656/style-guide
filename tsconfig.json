{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["ES2022"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noUncheckedIndexedAccess": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "types": ["vitest/globals"]
    },
    "include": ["scripts", "src"]
}
