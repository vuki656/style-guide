{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2023",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["*.js", ".*.js", "*.ts", ".*.ts", "src", "eslint.config.js"]
}
